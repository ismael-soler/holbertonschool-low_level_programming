CFLAGS = -Wall -pedantic -Werror -Wextra -std=gnu89
C = gcc
SRC = main.c school.c
OBJ = main.o school.o

all: school

school: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o school

main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c

school.o: school.c m.h
	$(CC) $(CFLAGS) -c school.c

.PHONY: clean
clean:
	rm -rf *.o
